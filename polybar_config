[bar/base]
monitor = ${env:MONITOR:eDPI}
width = 100%
height = 16
fixed-center = true

background = ${color.base-bg}
foreground = ${color.text-fg}

; Size of under-/overlines
line-size = 2

cursor-click = pointer
cursor-scroll = ns-resize

font-0 = bitbuntu:size=12;3
; Material Design Icons
font-1 = mplus Nerd Font:style=Medium:size=10;3
; Powerline Glyphs
font-2 = mplus Nerd Font:style=Medium:size=15;3

; Larger font size for bar fill icons
font-3 = mplus Nerd Font:style=Medium:size=10;3
; Smaller font size for shorter spaces
font-4 = mplus Nerd Font:style=Medium:size=6;3


; ___        __
;  | _  _   |__) _  _
;  |(_)|_)  |__)(_||
;      |

[bar/top-primary]
inherit = bar/base

modules-left = xbacklight right-end-top left-end-bottom volume right-end-top left-end-bottom ping right-end-top
;modules-center = left-end-bottom i3 right-end-bottom
modules-right = left-end-top wlan eth right-end-bottom left-end-top xkeyboard right-end-bottom left-end-top date right-end-bottom left-end-top updates-arch-combined

tray-background = ${color.module-bg}
tray-padding = ${layout.module-padding}
tray-position = right


[bar/top-secondary]
inherit = bar/top-primary
modules-left = ping right-end-top
;modules-center = left-end-bottom i3 right-end-bottom
modules-right =  left-end-top battery xkeyboard
tray-position = right


